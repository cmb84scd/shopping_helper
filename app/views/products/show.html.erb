<h1>Product Details</h1>
<p id="notice"><%= notice %></p>

<p>
  <strong>Item:</strong>
  <%= @product.item_name %>
</p>

<p>
  <strong>Aisle:</strong>
  <%= @product.aisle %>
</p>

<p>
  <strong>Side:</strong>
  <%= @product.side %>
</p>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= button_to 'Edit', edit_product_path(@product), method: :get, class: 'btn-primary' %></td>
      <td><%= button_to 'Delete', @product, method: :delete, data: { confirm: 'Are you sure you want to delete this item?' }, class: 'btn-danger' %></td>
    </tr>
  </tbody>
</table>
