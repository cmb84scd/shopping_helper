<h1>Product Details</h1>
<p id="notice"><%= notice %></p>

<p>
  <strong>Item:</strong>
  <%= @product.item_name %>
</p>

<p>
  <strong>Aisle:</strong>
  <%= @product.aisle %>
</p>

<p>
  <strong>Side:</strong>
  <%= @product.side %>
</p>

<%= link_to 'Edit', edit_product_path(@product) %>
<%= link_to 'Delete', @product, method: :delete, data: { confirm: 'Are you sure you want to delete this item?' } %>
