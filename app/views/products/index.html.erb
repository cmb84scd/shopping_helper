<p id="notice"><%= notice %></p>
<p id="alert"><%= alert %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Item</th>
      <th>Aisle</th>
      <th>Side</th>
      <th colspan="3"></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.item_name %></td>
        <td><%= product.aisle %></td>
        <td><%= product.side %></td>
        <td><%= button_to 'Product Details', product, method: :get, class: 'btn-primary' %></td>
        <td><%= button_to 'Add to shopping list', items_path, params: {product_id: product.id}, method: :post, class: 'btn-success' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
